{
  "prettier.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",

  "files.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.git": true,
    "**/dist": false,
    "**/coverage": true,
    "**/dist-reference": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.git": true,
    "**/dist": true,
    "**/coverage": true,
    "**/dist-reference": true,
    "**/docs": true
  },

  "eslint.enable": true,
  "eslint.format.enable": false,
  "eslint.workingDirectories": [
    "packages/eslint-config",
    "packages/commit",
    "packages/prettier-config",
    "packages/tsconfig",
    "actions/pr-commit-check",
    "actions/release-issues",
    "actions/setup-flutter"
  ],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  "json.schemaDownload.enable": true,

  "jest.rootPath": "./",
  "jest.showCoverageOnLoad": true,
  "jest.coverageFormatter": "GutterFormatter",
  "jest.enableCodeLens": true,
  "jest.autoRun": {
    "watch": false
    // "onStartup": ["all-tests"],
    // "onSave": "test-src-file"
  },
  "jest.jestCommandLine": "npm run test --",
  "jest.showTerminalOnLaunch": false,
  "jest.debugMode": false,

  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.autoClosingBrackets": "languageDefined",
  "editor.autoClosingQuotes": "languageDefined",

  // Editor Text Settings
  "editor.fontFamily": "MonoLisa, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.8,
  "editor.fontLigatures": true,

  // Terminal Text Settings
  "terminal.integrated.fontFamily": "MonoLisa, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,

  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  "editor.bracketPairColorization.enabled": true,
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": true,
  "workbench.preferredDarkColorTheme": "OneZero Dark",
  "workbench.preferredLightColorTheme": "OneZero Light",

  "indentRainbow.colors": [
    "#f32a8b",
    "#724cf1",
    "#0ed19a",
    "#e8d60e",
    "#2c7dd3",
    "#dd39cc"
  ],
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": ["storage"],
          "settings": {
            "foreground": "#f51c85"
          }
        },
        {
          "scope": ["string"],
          "settings": {
            "foreground": "#4a4c55"
          }
        },
        {
          "scope": [
            "comment",
            "punctuation.separator",
            "punctuation.terminator",
            "punctuation.accessor",
            "punctuation.support.type.property-name.begin.json",
            "punctuation.support.type.property-name.end.json",
            "punctuation.definition.array.begin.json.comments",
            "punctuation.definition.array.end.json.comments",
            "punctuation.definition.object.begin.json.comments",
            "punctuation.definition.object.end.json.comments",
            "punctuation.definition.string.begin",
            "punctuation.definition.string.end",
            "punctuation.definition.string.begin.json",
            "punctuation.definition.string.end.json"
          ],
          "settings": {
            "foreground": "#9ea8b1",
            "fontStyle": "italic"
          }
        },
        {
          "scope": ["keyword"],
          "settings": {
            "foreground": "#035ae6"
          }
        },
        {
          "scope": ["entity", "entity.name", "entity.name.function"],
          "settings": {
            "foreground": "#8549e6"
          }
        },
        {
          "scope": ["keyword.operator"],
          "settings": {
            "foreground": "#5d70ee"
          }
        },
        {
          "scope": ["support.type.property-name"],
          "settings": {
            "foreground": "#ff2188"
          }
        },
        {
          "scope": [
            "punctuation.definition.string.begin.json",
            "punctuation.definition.string.end.json"
          ],
          "settings": {
            "foreground": "#574e4e"
          }
        },
        {
          "scope": ["variable", "source.json"],
          "settings": {
            "foreground": "#1ac87d"
          }
        },
        {
          "scope": ["constant.language"],
          "settings": {
            "foreground": "#0095ff"
          }
        },
        {
          "scope": ["variable.other.property"],
          "settings": {
            "foreground": "#d532c7"
          }
        }
      ]
    },
    "[*Dark*][*Mirage*]": {
      "textMateRules": [
        {
          "scope": ["storage"],
          "settings": {
            "foreground": "#d33883"
          }
        },
        {
          "scope": [
            "comment",
            "punctuation.separator",
            "punctuation.terminator",
            "punctuation.accessor",
            "punctuation.support.type.property-name.begin.json",
            "punctuation.support.type.property-name.end.json",
            "punctuation.definition.array.begin.json.comments",
            "punctuation.definition.array.end.json.comments",
            "punctuation.definition.object.begin.json.comments",
            "punctuation.definition.object.end.json.comments",
            "punctuation.definition.string.begin",
            "punctuation.definition.string.end",
            "punctuation.definition.string.begin.json",
            "punctuation.definition.string.end.json"
          ],
          "settings": {
            "foreground": "#514c4c",
            "fontStyle": "italic"
          }
        },
        {
          "scope": ["string"],
          "settings": {
            "foreground": "#e8d3d3"
          }
        },
        {
          "scope": ["keyword"],
          "settings": {
            "foreground": "#6775ab"
          }
        },
        {
          "scope": ["entity", "entity.name", "entity.name.function"],
          "settings": {
            "foreground": "#9074f3"
          }
        },
        {
          "scope": ["keyword.operator"],
          "settings": {
            "foreground": "#424d9f"
          }
        },
        {
          "scope": ["support.type.property-name"],
          "settings": {
            "foreground": "#e980b1"
          }
        },
        {
          "scope": [
            "punctuation.definition.string.begin.json",
            "punctuation.definition.string.end.json"
          ],
          "settings": {
            "foreground": "#574e4e"
          }
        },
        {
          "scope": ["variable", "source.json"],
          "settings": {
            "foreground": "#51c48e"
          }
        },
        {
          "scope": ["constant.language"],
          "settings": {
            "foreground": "#0080ff"
          }
        },
        {
          "scope": ["variable.other.property"],
          "settings": {
            "foreground": "#e980b1"
          }
        }
      ]
    }
  },
  "workbench.iconTheme": "helium-icon-theme",
  "markdown-preview-github-styles.colorTheme": "system",
  "workbench.colorTheme": "OneZero Light"
}
