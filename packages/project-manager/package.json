{
  "name": "@onezerocompany/project-manager",
  "displayName": "OneZero Project Manager",
  "version": "0.0.1",
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/onezerocompany/coding#readme",
  "bugs": {
    "url": "https://github.com/onezerocompany/coding/issues/new"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onezerocompany/coding.git",
    "directory": "packages/project-manager"
  },
  "license": "MIT",
  "author": {
    "name": "OneZero Company",
    "email": "code-support@onezero.company",
    "url": "https://onezero.company"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.lib.json && chmod +x ./dist/cli.js",
    "cli": "ts-node ./src/cli.ts",
    "format": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint .",
    "test": "npx jest --silent --coverage"
  },
  "activationEvents": [],
  "prettier": "@onezerocompany/prettier-config",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "project": "./tsconfig.spec.json",
      "tsconfigRootDir": "./"
    },
    "extends": "@onezerocompany/eslint-config/typescript",
    "ignorePatterns": [
      "dist/",
      "coverage/",
      "jest.config.js",
      "tsconfig.json",
      "package.json",
      "README.md",
      "yarn.lock"
    ],
    "root": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    },
    "rootDir": "./",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "cli-table": "^0.3.11",
    "commander": "^9.1.0",
    "listr2": "^4.0.5",
    "markdown-table": "^3.0.2",
    "prompts": "^2.4.2",
    "vscode": "^1.1.37",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@onezerocompany/eslint-config": "file:../eslint-config",
    "@onezerocompany/prettier-config": "file:../prettier-config",
    "@types/cli-table": "^0.3.0",
    "@types/node": "^17.0.23",
    "@types/prompts": "^2.0.14",
    "@types/vscode": "^1.71.0",
    "@types/yaml": "^1.9.7",
    "eslint": "^8.13.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "vscode": "^1.71.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
