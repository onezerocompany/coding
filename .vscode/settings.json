{
  "prettier.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",

  "yaml.validate": true,
  "yaml.schemas": {
    "schemas/project-manifest.json": ["project-manifest.yaml"]
  },

  "files.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.git": true,
    "**/dist": true,
    "**/coverage": true,
    "**/dist-reference": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.git": true,
    "**/dist": true,
    "**/coverage": true,
    "**/dist-reference": true,
    "**/docs": true
  },

  "eslint.enable": true,
  "eslint.format.enable": false,
  "eslint.workingDirectories": [
    "packages/eslint-config",
    "packages/commit",
    "packages/project-manager",
    "packages/prettier-config",
    "packages/tsconfig",
    "actions/pr-commit-check",
    "actions/release-tracker",
    "actions/setup-flutter"
  ],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  "json.schemaDownload.enable": true,

  "jest.rootPath": "./",
  "jest.showCoverageOnLoad": true,
  "jest.coverageFormatter": "GutterFormatter",
  "jest.enableCodeLens": true,
  "jest.autoRun": {
    "watch": false
    // "onStartup": ["all-tests"],
    // "onSave": "test-src-file"
  },
  "jest.jestCommandLine": "npm run test --",
  "jest.showTerminalOnLaunch": false,
  "jest.debugMode": false,

  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.autoClosingBrackets": "languageDefined",
  "editor.autoClosingQuotes": "languageDefined",

  // Editor Text Settings
  "editor.fontFamily": "MonoLisa, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.8,
  "editor.fontLigatures": true,

  // Terminal Text Settings
  "terminal.integrated.fontFamily": "MonoLisa, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,

  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  "editor.bracketPairColorization.enabled": true,
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": true,
  "workbench.preferredDarkColorTheme": "OneZero Dark",
  "workbench.preferredLightColorTheme": "OneZero Light",

  "indentRainbow.colors": [
    "#f32a8b",
    "#724cf1",
    "#0ed19a",
    "#e8d60e",
    "#2c7dd3",
    "#dd39cc"
  ],

  "markdown-preview-github-styles.colorTheme": "system",
  "workbench.colorTheme": "OneZero Dark"
}
